<style type="text/css">
    .form-error {
        color: red;
        font-weight: bold;
        padding-bottom:10px;
    }
    .form-error ul {
        margin:0;
    }
</style>

{# Etape 2 #}
<div class="card step_2">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
            <div class="input-field">
                {{ form_widget(form.client.firstname) }}
                <label>Prénom</label>
                {{ form_errors(form.client.firstname) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.client.lastname) }}
                <label>Nom</label>
                {{ form_errors(form.client.lastname) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.adressLine1) }}
                <label>Adresse</label>
                {{ form_errors(form.billing.adressLine1) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.adressLine2) }}
                <label>Complément adr.</label>
                {{ form_errors(form.billing.adressLine2) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.city) }}
                <label>Ville</label>
                {{ form_errors(form.billing.city) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.zipcode) }}
                <label>Code postal</label>
                {{ form_errors(form.billing.zipcode) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.country) }}
                <label>Pays</label>
                {{ form_errors(form.billing.country) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.billing.phone) }}
                <label>Téléphone</label>
                {{ form_errors(form.billing.phone) }}
            </div>
            <div class="input-field">
                {{ form_widget(form.client.email) }}
                {{ form_errors(form.client.email) }}
            </div>
        </div>
    </div>
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
            <div class="collapsible-body">
                <div class="input-field">
                    {{ form_widget(form.shipping.clientFirstName) }}
                    <label>Prénom</label>
                    {{ form_errors(form.shipping.clientFirstName) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.clientLastName) }}
                    <label>Nom</label>
                    {{ form_errors(form.shipping.clientLastName) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.adressLine1) }}
                    <label>Adresse</label>
                    {{ form_errors(form.shipping.adressLine1) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.adressLine2) }}
                    <label>Complément adr.</label>
                    {{ form_errors(form.shipping.adressLine2) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.city) }}
                    <label>Ville</label>
                    {{ form_errors(form.shipping.city) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.zipcode) }}
                    <label>Code postal</label>
                    {{ form_errors(form.shipping.zipcode) }}
                </div>
                <div class="input-field">
                   {{ form_widget(form.shipping.country) }}
                    <label>Pays</label>
                    {{ form_errors(form.shipping.country) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.shipping.phone) }}
                    <label>Téléphone</label>
                    {{ form_errors(form.shipping.phone) }}
                </div>
            </div>
        </li>
    </ul>
</div>
{# Etape 3 #}
<div class="card step_3">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 3</span>
        <p class="h6 center-align">Choisissez un paiement</p>
        <ul class="collapsible">
            <li class="active">
                <div class="collapsible-header"><i class="fas fa-credit-card"></i>Payer avec la Carte Bancaire</div>
                <div class="collapsible-body card-form">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" name="order[payment_method]" value="lpmonetico" class="btn-large btn-block waves-effect waves-light">Continuer</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                            <img class="responsive-img monetico" src="assets/images/paiement-securise-stripe.jpeg" alt="Stripe protège vos achats">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="collapsible-header"><i class="fab fa-cc-paypal"></i>Payer avec Paypal</div>
                <div class="collapsible-body">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" name="order[payment_method]" value="lppaypal" class="btn-large btn-block waves-effect waves-light">Continuer sur PayPal</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>