{% extends 'base.html.twig' %}

{% block title %}Addresses index{% endblock %}

{% block body %}
    <h1>Addresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in Addresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>
                    <a href="{{ path('Addresses_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('Addresses_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('Addresses_new') }}">Create new</a>
{% endblock %}
